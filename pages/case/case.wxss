.case {
  margin: 4% 4% 0 4%;
}

.case-header {
  font-size: 32rpx;
}

.formIcon {
  width: 12rpx;
  height: 30rpx;
}

.case-body {
  width: 100%;
}

.view-case {
  height: 100rpx;
  width: 100%;
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
}

.view-case-left {
  font-size: 24rpx;
  width: 70%;
}

.view-case-left-name {
  height:70rpx;
}

.view-case-left-date {
  height:30rpx;
  color: rgb(178,178,178)
}

.view-case-right {
  width: 30%;
}

.image {
  height: 100%;
  width: 100%;
}

.empty-line {
  width: 100%;
  height: 10rpx;
  margin-top: 15rpx;
  background-color: rgb(243, 243, 245);
}
